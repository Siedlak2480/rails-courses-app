<h1 class="text-3xl font-bold mb-6">Places</h1>

<div class="mb-4">
  <%= link_to "âž• New Place",
              new_place_path,
              class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" %>
</div>

<% if @places.any? %>
  <table class="min-w-full border border-gray-200 shadow rounded-lg">
    <thead class="bg-gray-100">
      <tr>
        <th class="px-4 py-2 text-left">Name</th>
        <th class="px-4 py-2 text-left">Address</th>
        <th class="px-4 py-2 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @places.each do |place| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= place.name %></td>
          <td class="px-4 py-2"><%= place.address %></td>
          <td class="px-4 py-2 space-x-2">
            <%= link_to "Show", place, class: "text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_place_path(place), class: "text-yellow-600 hover:underline" %>
            <%= link_to "Delete",
                        place,
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No places available. <%= link_to "Add the first one", new_place_path, class: "text-blue-600 underline" %></p>
<% end %>