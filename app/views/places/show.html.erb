<h1><%= @place.name %></h1>
<p><%= @place.address %></p>

<div style="margin-top:8px; margin-bottom:12px;">
  <%= link_to "Back to places", places_path, class: "btn" %>
  <%= link_to "Edit", edit_place_path(@place), class: "btn", style: "margin-left:8px;" %>

  <%= button_to "Delete", place_path(@place),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this place and all its courses?" },
                form: { style: "display:inline; margin-left:8px;" },
                class: "btn btn-danger" %>
</div>

<hr>

<div style="display:flex; justify-content:space-between; align-items:center;">
  <h2>Courses (<%= @courses.size %>)</h2>
  <%= link_to "New Course", new_place_course_path(@place), class: "btn" %>
</div>

<% if @courses.any? %>
  <ul id="place-courses-list" style="margin-top:8px;">
    <% @courses.each do |course| %>
      <%= render partial: "course", locals: { course: course } %>
    <% end %>
  </ul>
<% else %>
  <p style="margin-top:8px;">
    Brak kursÃ³w w tym miejscu.
    <%= link_to "Dodaj pierwszy kurs", new_place_course_path(@place), class: "btn", style: "margin-left:8px;" %>
  </p>
<% end %>