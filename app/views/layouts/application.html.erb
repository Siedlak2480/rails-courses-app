<!DOCTYPE html>
<html>
<head>
  <title>ActiveMVP</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_importmap_tags %>
</head>

<header style="padding:16px; border-bottom:1px solid #eee; margin-bottom:20px;">
  <nav>
    <%= link_to "Home", root_path, id: "nav-home", style: "margin-right:12px;" %>
    <%= link_to "Places", places_path, id: "nav-places", style: "margin-right:12px;" %>
    <%= link_to "New Place", new_place_path, id: "nav-new-place" %>
  </nav>
</header>

  <main style="padding: 0 16px;">
    <% if notice %>
      <p style="background:#e6ffed; padding:8px; border:1px solid #b7f5c3"><%= notice %></p>
    <% end %>
    <%= yield %>
  </main>
</body>
</html>