<h1>Edit Participant</h1>

<%= form_with model: @participant, local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <%= f.submit "Save" %>
<% end %>

<%= link_to "Back", course_path(@participant.course) %>